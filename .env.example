# Application Settings
ENV=development  # development or production
DEBUG=True
API_HOST=0.0.0.0
API_PORT=8000
FRONTEND_URL=http://localhost:3000

# Security
SECRET_KEY=your-secret-key-here  # Change this in production!
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30
ALGORITHM=HS256

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/parallaxpal
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10
CACHE_TTL=3600  # Default cache TTL in seconds

# Research Settings
MAX_CONCURRENT_TASKS=5
TASK_TIMEOUT=300  # seconds
MAX_RETRIES=3
RETRY_DELAY=5  # seconds

# Monitoring
LOG_LEVEL=INFO
PROMETHEUS_PORT=9090
ENABLE_METRICS=True
METRICS_PREFIX=parallaxpal_

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60  # seconds

# OpenAI Configuration
OPENAI_API_KEY=your-api-key-here
OPENAI_MODEL=gpt-4
MAX_TOKENS=2000

# Search Engine Settings
SEARCH_RESULTS_LIMIT=10
SEARCH_TIMEOUT=30  # seconds

# Error Reporting
ENABLE_ERROR_REPORTING=True
ERROR_REPORTING_EMAIL=errors@your-domain.com

# Documentation
DOCS_URL=/api/docs
REDOC_URL=/api/redoc
OPENAPI_URL=/api/openapi.json

# Testing
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/parallaxpal_test
ENABLE_TEST_LOGGING=False

# Feature Flags
ENABLE_CACHING=True
ENABLE_RATE_LIMITING=True
ENABLE_AUTH=True
ENABLE_MONITORING=True

# Admin Configuration
ADMIN_EMAIL=admin@your-domain.com
ADMIN_USERNAME=admin
# Set this only during initial setup
# ADMIN_INITIAL_PASSWORD=change-this-password

# Email Configuration
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@example.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=your-email@example.com
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_TIMEOUT=30

# Email Templates
EMAIL_TEMPLATES_DIR=templates/email
VERIFICATION_EMAIL_TEMPLATE=verification.html
PASSWORD_RESET_TEMPLATE=password_reset.html
SUBSCRIPTION_CONFIRMATION_TEMPLATE=subscription_confirmation.html
PAYMENT_RECEIPT_TEMPLATE=payment_receipt.html

# SMS Configuration
SMS_API_KEY=your-sms-api-key
SMS_API_SECRET=your-sms-api-secret
SMS_FROM=+1234567890

# Stripe Configuration
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
STRIPE_API_VERSION=2023-10-16

# Subscription Plans (Default configurations)
BASIC_PLAN_PRICE=9.99
PRO_PLAN_PRICE=29.99
ENTERPRISE_PLAN_PRICE=99.99
TRIAL_PERIOD_DAYS=14

# Payment Settings
CURRENCY=USD
PAYMENT_METHODS=card
AUTOMATIC_TAX=false
TAX_RATES=[]  # Comma-separated list of Stripe tax rate IDs